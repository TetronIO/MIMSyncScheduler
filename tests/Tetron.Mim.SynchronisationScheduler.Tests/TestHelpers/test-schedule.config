<?xml version="1.0" encoding="utf-8" ?>
<Schedule Name="Integration Test Schedule" StopOnIncompletion="true">

  <!-- Test Executable Tasks -->
  <Task Name="Test Executable Success" Enabled="true" Type="Executable">
    <Command>cmd.exe</Command>
    <Arguments>/c exit 0</Arguments>
  </Task>

  <Task Name="Test PowerShell Success" Enabled="true" Type="PowerShell">
    <Command>TestHelpers\test-success.ps1</Command>
  </Task>

  <Task Name="Test VBScript Success" Enabled="true" Type="VisualBasicScript">
    <Command>TestHelpers\test-success.vbs</Command>
  </Task>

  <!-- Test with Child Tasks -->
  <Task Name="Parent Task with Children" Enabled="true" Type="Executable">
    <Command>cmd.exe</Command>
    <Arguments>/c exit 0</Arguments>
    <ChildTasks>
      <Task Name="Child Task 1" Enabled="true" Type="PowerShell">
        <Command>TestHelpers\test-success.ps1</Command>
      </Task>
      <Task Name="Child Task 2" Enabled="true" Type="Executable">
        <Command>cmd.exe</Command>
        <Arguments>/c exit 0</Arguments>
      </Task>
    </ChildTasks>
  </Task>

  <!-- Test Block Task -->
  <Block Name="Parallel Block Test" Enabled="true">
    <Task Name="Block Task 1" Enabled="true" Type="PowerShell">
      <Command>TestHelpers\test-success.ps1</Command>
    </Task>
    <Task Name="Block Task 2" Enabled="true" Type="Executable">
      <Command>cmd.exe</Command>
      <Arguments>/c exit 0</Arguments>
    </Task>
  </Block>

</Schedule>
